{
    "type": "object",
    "properties": {
        "tables": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/Config"
            }
        },
        "users": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/UserConfig"
            }
        },
        "app": {
            "$ref": "#/$defs/AppConfig"
        }
    },
    "required": ["tables", "app", "users"],
    "$defs": {
        "Config": {
            "type": "object",
            "required": ["name", "tag"],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                },
                "datasource": {
                    "oneOf": [
                        {
                            "type": "null"
                        },
                        {
                            "$ref": "#/$defs/DatasourceConfig"
                        }
                    ]
                },
                "config_from_delta": {
                    "type": ["boolean", "null"]
                },
                "version": {
                    "type": ["integer", "null"]
                },
                "api_method": {
                    "oneOf": [
                        {
                            "enum": ["get", "post"]
                        },
                        {
                            "type": "array",
                            "items": {
                                "enum": ["get", "post"]
                            }
                        }
                    ]
                },
                "params": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "$ref": "#/$defs/Param"
                            },
                            {
                                "type": "string"
                            }
                        ]
                    }
                },
                "timestamp": {
                    "type": ["string", "null"],
                    "format": "date-time"
                },
                "allow_get_all_pages": {
                    "type": ["boolean", "null"]
                },
                "search": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/SearchConfig"
                    }
                },
                "nearby": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/NearbyConfig"
                    }
                },
                "engine": {
                    "enum": ["duckdb", "polars", "odbc", "sqlite"]
                },
                "chunk_size": {
                    "type": ["integer", "null"]
                },
                "duckdb_backend": {
                    "oneOf": [
                        {
                            "type": "null"
                        },
                        {
                            "$ref": "#/$defs/DuckDBBackendConfig"
                        }
                    ]
                }
            }
        },
        "DatasourceConfig": {
            "type": "object",
            "required": ["uri"],
            "additionalProperties": false,
            "properties": {
                "uri": {
                    "type": "string"
                },
                "file_type": {
                    "enum": [
                        "delta",
                        "parquet",
                        "arrow",
                        "arrow-stream",
                        "avro",
                        "csv",
                        "json",
                        "ndjson",
                        "odbc",
                        "sqlite",
                        "duckdb"
                    ]
                },
                "select": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/Column"
                    }
                },
                "exclude": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "sortby": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/SortBy"
                    }
                },
                "filters": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/Filter"
                    }
                },
                "table_name": {
                    "type": ["string", "null"]
                },
                "in_memory": {
                    "type": "boolean"
                },
                "hash_key": {
                    "type": ["string", "null"]
                }
            }
        },
        "Column": {
            "type": "object",
            "required": ["name"],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "alias": {
                    "type": ["string", "null"]
                }
            }
        },
        "SortBy": {
            "type": "object",
            "required": ["by"],
            "additionalProperties": false,
            "properties": {
                "by": {
                    "type": "string"
                },
                "direction": {
                    "enum": ["asc", "desc"]
                }
            }
        },
        "Filter": {
            "type": "object",
            "required": ["key", "operator", "value"],
            "additionalProperties": false,
            "properties": {
                "key": {
                    "type": "string"
                },
                "operator": {
                    "enum": ["=", ">", "<", ">=", "<=", "<>", "!=", "==", "between", "not between", "in", "not in"]
                },
                "value": {
                    "oneOf": [
                        {},
                        {
                            "type": "array",
                            "minItems": 2,
                            "maxItems": 2,
                            "additionalItems": false,
                            "prefixItems": [{}, {}]
                        }
                    ]
                }
            }
        },
        "Param": {
            "type": "object",
            "required": ["name"],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "combi": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "default": {
                    "type": ["string", "null"]
                },
                "required": {
                    "type": ["boolean", "null"]
                },
                "operators": {
                    "type": "array",
                    "items": {
                        "enum": [
                            "<",
                            "=",
                            ">",
                            ">=",
                            "<=",
                            "<>",
                            "contains",
                            "in",
                            "not contains",
                            "not in",
                            "not null",
                            "null",
                            "between",
                            "not between",
                            "has",
                            "startswith"
                        ]
                    }
                },
                "colname": {
                    "type": ["string", "null"]
                }
            }
        },
        "SearchConfig": {
            "type": "object",
            "required": ["name", "columns"],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "columns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "NearbyConfig": {
            "type": "object",
            "required": ["name", "lat_col", "lon_col"],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "lat_col": {
                    "type": "string"
                },
                "lon_col": {
                    "type": "string"
                }
            }
        },
        "DuckDBBackendConfig": {
            "type": "object",
            "required": ["db_path"],
            "additionalProperties": false,
            "properties": {
                "db_path": {
                    "type": "string"
                },
                "enable": {
                    "type": "boolean"
                },
                "primary_key": {
                    "type": ["string", "null"]
                },
                "index": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "UserConfig": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "passwordhash": {
                    "type": "string"
                }
            }
        },
        "AppConfig": {
            "type": "object",
            "properties": {
                "tile": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "static_file_path": {
                    "type": "string"
                },
                "logo_path": {
                    "type": "string"
                }
            }
        }
    },
    "$schema": "https://json-schema.org/draft/2020-12/schema"
}
