{
    "type": "object",
    "properties": {
        "tables": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/Config"
            }
        },
        "users": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/UserConfig"
            }
        },
        "app": {
            "$ref": "#/$defs/AppConfig"
        }
    },
    "required": [
        "app",
        "users",
        "tables"
    ],
    "$defs": {
        "Config": {
            "type": "object",
            "required": [
                "name",
                "tag",
                "datasource"
            ],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                },
                "datasource": {
                    "$ref": "#/$defs/DatasourceConfig"
                },
                "version": {
                    "type": [
                        "integer",
                        "null"
                    ]
                },
                "api_method": {
                    "oneOf": [
                        {
                            "enum": [
                                "get",
                                "post"
                            ]
                        },
                        {
                            "type": "array",
                            "items": {
                                "enum": [
                                    "get",
                                    "post"
                                ]
                            }
                        }
                    ]
                },
                "params": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "$ref": "#/$defs/Param"
                            },
                            {
                                "type": "string"
                            }
                        ]
                    }
                },
                "timestamp": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "date-time"
                },
                "cache_expiration_time_seconds": {
                    "type": [
                        "integer",
                        "null"
                    ]
                },
                "allow_get_all_pages": {
                    "type": [
                        "boolean",
                        "null"
                    ]
                },
                "search": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/SearchConfig"
                    }
                },
                "engine": {
                    "enum": [
                        "duckdb",
                        "polars"
                    ]
                },
                "chunk_size": {
                    "type": [
                        "integer",
                        "null"
                    ]
                }
            }
        },
        "DatasourceConfig": {
            "type": "object",
            "required": [
                "uri"
            ],
            "additionalProperties": false,
            "properties": {
                "uri": {
                    "type": "string"
                },
                "file_type": {
                    "enum": [
                        "delta",
                        "parquet",
                        "arrow",
                        "arrow-stream",
                        "avro",
                        "csv",
                        "json",
                        "ndjson"
                    ]
                },
                "select": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/Column"
                    }
                },
                "exclude": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "sortby": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/SortBy"
                    }
                },
                "filters": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/Filter"
                    }
                },
                "in_memory": {
                    "type": "boolean"
                },
                "cache_expiration_time_seconds": {
                    "type": [
                        "integer",
                        "null"
                    ]
                }
            }
        },
        "Column": {
            "type": "object",
            "required": [
                "name"
            ],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "alias": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            }
        },
        "SortBy": {
            "type": "object",
            "required": [
                "by"
            ],
            "additionalProperties": false,
            "properties": {
                "by": {
                    "type": "string"
                },
                "direction": {
                    "enum": [
                        "asc",
                        "desc"
                    ]
                }
            }
        },
        "Filter": {
            "type": "object",
            "required": [
                "key",
                "operator",
                "value"
            ],
            "additionalProperties": false,
            "properties": {
                "key": {
                    "type": "string"
                },
                "operator": {
                    "enum": [
                        "=",
                        ">",
                        "<",
                        ">=",
                        "<=",
                        "<>",
                        "!=",
                        "==",
                        "between",
                        "not between",
                        "in",
                        "not in"
                    ]
                },
                "value": {
                    "oneOf": [
                        {},
                        {
                            "type": "array",
                            "minItems": 2,
                            "maxItems": 2,
                            "additionalItems": false,
                            "prefixItems": [
                                {},
                                {}
                            ]
                        }
                    ]
                }
            }
        },
        "Param": {
            "type": "object",
            "required": [
                "name"
            ],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "combi": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "default": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "required": {
                    "type": [
                        "boolean",
                        "null"
                    ]
                },
                "operators": {
                    "type": "array",
                    "items": {
                        "enum": [
                            "<",
                            "=",
                            ">",
                            ">=",
                            "<=",
                            "<>",
                            "contains",
                            "in",
                            "not contains",
                            "not in",
                            "not null",
                            "null",
                            "between",
                            "not between"
                        ]
                    }
                },
                "colname": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            }
        },
        "SearchConfig": {
            "type": "object",
            "required": [
                "name",
                "columns"
            ],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "columns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "UserConfig": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "passwordhash": {
                    "type": "string"
                }
            }
        },
        "AppConfig": {
            "type": "object",
            "properties": {
                "tile": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "static_file_path": {
                    "type": "string"
                },
                "logo_path": {
                    "type": "string"
                }
            }
        }
    },
    "$schema": "https://json-schema.org/draft/2020-12/schema"
}